<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardview"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        app:cardElevation="10dp"
        android:elevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rl_package_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_basic"
                android:layout_marginHorizontal="30dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:id="@+id/tv_package_name"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:buttonTint="#2196F3"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="subcribe"
                    android:checked="false"
                    android:id="@+id/rb_package_sub"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_basic"
                android:id="@+id/basic_tem_ll"
                android:layout_marginHorizontal="30dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35sp"
                    android:text="@string/rs"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:textSize="35sp"
                    android:id="@+id/tv_package_price"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/Life Time"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:id="@+id/tv_package_duration"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/basic_tem_ll"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:text="@string/includes_ads_promotions"
                    android:id="@+id/tv_package_desc"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>